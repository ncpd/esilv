<script>
    $(function () {
        $('.dataTable').DataTable({
            responsive: true
        });
    });
</script>
<script>
    function searchLocations() {
        var inputValue = document.getElementById('input_immat').value;
        if(inputValue === "") {
            alert("Vous n'avez pas entré de valeur !" + inputValue);
        } else {
            window.location.href = ("/historique/vehicule?immat=").concat(inputValue.toString());
        }
    }
</script>
